.showCode{
  background-color: #FAFAFA;
  color: #272727;
  padding: 20rpx 0rpx;
  justify-content: center;
  display: flex;
  font-size: 30rpx;
  letter-spacing: 3rpx;
  border-bottom: 2rpx solid #dddddd;
}
.code{
  color: #FF4646;
  letter-spacing: 0;
}

.contain{
  height:100rpx;
  line-height: 100rpx;
  width: 90%;
  margin: 0 auto;
  border-bottom: 2rpx solid #dddddd;
  display: flex;
  font-size: 34rpx;
  color: #000000;
  position: relative;
}
.foodName{
  position: absolute;
  left: 0;
}
.foodNum{
  color: #909090;
  position: absolute;
  left: 50%;
}
.foodPri{
  position: absolute;
  right: 0;
}
.total{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
  margin: 0 auto;
  font-size: 35rpx;
  padding-right: 40rpx;
  background-color: #ffffff;
}
.totalPri{
  margin-left: 30rpx;
  color: #ff4949;
}
.returnMoney{
  width: 90%;
  line-height: 2;
  border:1px solid #FF8049;
  color: #FF8049;
  font-size: 36rpx;
  margin-top: 30rpx;
}
.returnMoney::after{
  border: none;
}

.modifyModal{
 width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 90;
}
.modifyTel{
  width: 70%;
  height: 530rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 15%;
  z-index: 99;
  background: #ffffff;
  border-radius: 15rpx;
  padding-bottom: 20rpx;
}
.returnTie{
  border-radius: 15rpx 15rpx 0rpx 0rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FF8049;
  color: #ffffff;
  font-size: 35rpx;
}
.pleaseInt{
  padding: 20rpx;
  font-size: 35rpx;
}
.refunds{
  width: 90%;
  margin: 0 auto;
  height: 230rpx;
  border: 1rpx solid #dddddd;
}
.clickBtn{
  width: 150rpx;
  padding: 0rpx;
  font-size: 35rpx;
  line-height: 2;
 background-color: #FF8049;
  color: #ffffff;
}