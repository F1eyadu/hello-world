.chooseType{
  width: 100%;
  height: 350rpx;
  background: #FF8049;
  display: flex;
  justify-content:space-around;
}
.orderType{
  margin-top: 80rpx;
  height: 140rpx;
  width: 140rpx;
  font-size: 45rpx;
  border-radius: 50%;
  font-weight: bold;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bggray{
  color: #A2A2A2;
  background-color: #FFFEFD;
}
.bgOrg{
  background-color: #FFFEFD;
  color: #FF8049;
}
.orderName{
  margin-top: 20rpx;
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
}
.content{
  width: 95%;
  margin: 0 auto;
  color: #3A3A3A;
}
.salePosition{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  letter-spacing: 3rpx;
}
.borderBott{
border-bottom: 1rpx solid #EAEAEA;
}
.saleDiscount{
  width: 100%;
  height: 60rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #EAEAEA;
  display: flex;
}
.disProjects{
  width: 80%;
  height: 100%;
}
.disProject{
  display: flex;
  height: 60rpx;
  align-items: center;
  font-size: 35rpx;
}
.saleTele{
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.saleTele image{
  width: 70rpx;
  height: 70rpx;
}
.salerShow{
  display: flex;
  height: 65rpx;
  align-items: center;
  font-size: 35rpx;
}
.swiperS{
  width: 100%;
  height: 350rpx;
  position: relative;
}
.saleImg{
  width: 100%;
  height: 100%;
}
.PagNumber{
  position: absolute;
  z-index: 99;
  bottom: 25rpx;
  right: 30rpx;
  color: #ffffff;
  font-size: 30rpx;
}
.remind{
  position: fixed;
  z-index: 999;
  top: 45%;
  left: 35%;
  width: 250rpx;
  height: 65rpx;
  line-height: 65rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 10rpx;
}