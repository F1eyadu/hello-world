.checkbox{
  padding: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.methodIcon{
  width:100rpx;
  height:100rpx;
  position: absolute;
  left: 30rpx;
}
.methodName{
  position: absolute;
  left: 35%;
  font-size: 35rpx;
}
.bandtip{
  position: absolute;
  right: 5%;
}
.alipay{
  padding: 15rpx;
  font-size: 38rpx;
  text-align: center;
  line-height:50rpx;
}
.alipayBtn{
  width: 50%;
  line-height: 2;
  font-size: 35rpx;
  color: #ffffff;
  background-color: #FF8049;
}
.alipayBtn::after{
  border: none
}