page{
   background-color: #F6F6F6;
}
.modifyInfo{
  background-color: #ffffff;
  padding: 30rpx;
  font-size: 35rpx;
}
.userInfo{
  display: flex;
  align-items: center;
  padding: 10rpx 0rpx;
}
.title{
  width: 23%;
  line-height: 70rpx;
}
.userName{
  width:76%;
  display: flex;
  height: 70rpx;
  align-items: center;
  border-bottom: 1rpx solid #EAEAEA;
  margin-left: 5rpx;
}
.chooseSex{
  width:76%;
  height: 70rpx;
   border-bottom: 1rpx solid #EAEAEA;
   display: flex;
   align-items: center;
   margin-left: 5rpx;
}
.userSex{
  color: #171717;
  font-size: 30rpx;
  padding: 0rpx 15rpx;
  border: 1rpx solid #171717;
  border-radius: 5rpx;
  margin-left: 20rpx;
}
 .userTel{
  width: 100%;
} 
.more{
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.SaveBtn{
  position: fixed;
  bottom: 20%;
  width: 90%;
  left: 5%;
  background-color: #FF8149;
  color: #ffffff;
  line-height: 2;
}
.modifyModal{
 width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 90;
}
.modifyTel{
  width: 70%;
  height: 300rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 15%;
  z-index: 99;
  background: #ffffff;
  border-radius: 15rpx;
}
.inputTel{
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
  width: 90%;
  margin: 20rpx auto 0;
  padding: 10rpx 0;
}
.placeSty{
  padding-left: 20rpx;
  font-size: 30rpx;
}
.getYZM{
  width: 39%;
  height: 52rpx;
  border-left: 1rpx solid #E8E8E8;
}
.yzmBtn{
  border: none;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 30rpx;
  background-color: #ffffff;
  padding: 0;
}
.yzmBtn::after{
  border: none;
}
.Tele{
  width: 60%;
  height: 52rpx;
}
.Tele input{
  padding-left: 20rpx;
  font-size: 30rpx;
  height: 52rpx;
}
.inputYZM{
  width: 90%;
  height: 80rpx;
  margin: 10rpx auto;
  border-bottom: 1rpx solid #E7E7E7;
}
.inputYZM input{
  font-size: 30rpx;
  padding-left: 20rpx;
  height: 80rpx;
}
.confirms{
  display: flex;
  width: 90%;
  margin: 30rpx auto 0rpx;
}
.confirms button{
  /* padding: 0rpx 15rpx; */
  border: none;
  font-size: 30rpx;
  color: #ffffff; 
}
.confirms button::after{
  border:none;
}
.chooseSexs{
  background-color: #FF8149;
  border: none;
  color: #ffffff;
}
.message{
  position: fixed;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.3);
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 35rpx;
  padding: 10rpx 20rpx;
  letter-spacing: 3rpx;
  top: 60%;
  left: 28%;
  height: 50rpx;
}