.contain{
  height:100rpx;
  line-height: 100rpx;
  width: 90%;
  margin: 0 auto;
  border-bottom: 2rpx solid #dddddd;
  display: flex;
  font-size: 34rpx;
  color: #000000;
  position: relative;
}
.foodName{
  position: absolute;
  left: 0;
}
.foodNum{
  color: #909090;
  position: absolute;
  left: 50%;
}
.foodPri{
  position: absolute;
  right: 0;
}
.total{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
  margin: 0 auto;
  font-size: 35rpx;
  padding-right: 40rpx;
  background-color: #ffffff;
}
.totalPri{
  margin-left: 30rpx;
  color: #ff4949;
}
.orderBtn{
  margin-top: 60rpx;
  width: 90%;
  border: none;
  background-color: #ff8149;
  font-size: 32rpx;
  color: #ffffff;
}

.modifyModal{
 width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 90;
}
.modifyTel{
  width: 70%;
  height: 300rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 15%;
  z-index: 99;
  background: #ffffff;
  border-radius: 15rpx;
  text-align: center;
}
.title{
position: relative;
color: #ffffff;
font-size: 35rpx;
padding: 20rpx 0;
top:0;
left: 0;
background-color: #FF8049;
}
.userNum{
  display: flex;
  justify-content: center;
  align-items: center;
  margin:35rpx auto;
}
.inputNum{
width: 100rpx;
height: 55rpx;
border-bottom: 1rpx solid #909090;
}
.confrim{
  border: none;
  width: 40%;
  line-height: 2;
  background-color: #FF8049;
  color: #ffffff;
  font-size: 34rpx;
  margin-top: 30rpx;
}
.confrim::after{
  border: none;
}
.close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}