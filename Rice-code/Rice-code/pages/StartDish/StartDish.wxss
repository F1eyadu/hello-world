.showCode{
  background-color: #FAFAFA;
  color: #272727;
  padding: 20rpx 0rpx;
  justify-content: center;
  display: flex;
  font-size: 30rpx;
  letter-spacing: 3rpx;
  border-bottom: 2rpx solid #dddddd;
}
.code{
  color: #FF4646;
  letter-spacing: 0;
}
