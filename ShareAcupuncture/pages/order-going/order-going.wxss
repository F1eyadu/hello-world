.container {
    height: 100%;
    margin-top: 20rpx;
    box-sizing: border-box;
}
.chance-title {
    height: 68rpx;
    width: 90%;
    margin: 10rpx auto;
    border-bottom: 1rpx solid #999;
}
.status .weiyue {
  border: 2rpx solid #f96086;
  color: #333;
}
.chance-title .title-box {
    width: 50%;
    height: 68rpx;
    display: inline-block;
}
.status .over {
  border: 2rpx solid #f96086;
}
.status .quxiao {
  border: 2rpx solid #000;
  color: #333;
}
.chance-title .title-box text {
    display: block;
    text-align: center;
    height: 100%;
    width: 150rpx;
    margin: 0rpx auto;
}
.time text {
  margin-top: 20rpx;
  font-size: 28rpx;
}
.going {
    border-bottom: 4rpx solid #f96086;
}
.did {
    border-bottom: 4rpx solid #f96086;
}
.nohave image {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto;
  display: block;
}
.stitle {
  font-size: 32rpx;
}
.work-bigbox-going {
    width: 98%;
    border-radius: 10rpx;
    margin: 20rpx auto;
}
.work-bigbox-did {
    width: 98%;
    border-radius: 10rpx;
    margin: 20rpx auto;
}
.work-bigbox-going .work-box:nth-child(1),
.work-bigbox-did .work-box:nth-child(1) {
    margin: 20rpx auto;
}
.work-box {
    width: 86%;
    padding: 20rpx;
    margin: 40rpx auto;
    box-shadow: 2rpx 2rpx 10rpx 10rpx #F1F1F1;
}
.nohave {
    width: 90%;
    padding: 20rpx;
    text-align: center;
    margin: 200rpx auto;
    color: #999;
}
.worker-info text {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
}
.worker-info view {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
}
.img {
    width: 110rpx;
    height: 110rpx; 
    float: left;
}
.img,.worker-info,.status {
    display: inline-block;
}
.work-box-top .img image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}
.worker-info {
    height: 120rpx; 
    margin-left: 20rpx;
}
.status {
    float: right;
    margin-top: 20rpx;
    font-size: 26rpx;
}
.status text {
    color: #f96086;
    padding: 5rpx;
    border-radius: 10rpx;
}
.proiect-content {
    margin-top: 20rpx;
}
.content {
    color: #333;
    margin-top: 20rpx;
}
.content .Title:nth-child(1) {
    color: #f96086;
    margin-right: 20rpx;
}
.money {
    margin-top: 20rpx;
    font-size: 32rpx;
}
.money text:nth-child(2) {
    color: #f96086;
}
/*状态框*/
.status .serving {
  color: #f96086;
}
.status .waitservice {
    border: 2rpx solid #f96086;
}
.status .waitaccept {
    border: 2rpx solid #f96086;
    background-color: #FFE7EB;
}
.status .waitpay{
  background-color: #87CEFA;
  color: #fff;
}
.status .shixiao {
  background: #F1F1F1;
  color: #999;
}